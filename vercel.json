{
  "name": "cryptominerpro-api",
  "version": "1.0.0",
  "description": "ASIC Mining Equipment Marketplace API",
  "buildCommand": "pip install -r requirements.txt",
  "runtime": "python3.11",
  "functions": {
    "api": {
      "runtime": "python3.11",
      "handler": "run.app",
      "environment": {
        "FLASK_ENV": "production"
      }
    }
  },
  "env": {
    "DATABASE_URL": {
      "description": "PostgreSQL database URL"
    },
    "REDIS_URL": {
      "description": "Redis connection URL"
    },
    "SECRET_KEY": {
      "description": "Flask secret key"
    }
  }
}
